@model IEnumerable<AcademyModel>

@{
    ViewBag.Title = "Index";
}

<div>
    <table>
        <tr>
            <th>@Html.LabelFor(model => model.First().Id)</th>
            <th>@Html.LabelFor(model => model.First().Name)</th>
            <th>@Html.LabelFor(model => model.First().Establishments)</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                @foreach (var Estab in item.Establishments)
                {
                    <td>
                        <!--linkText, actionName, controllerName, routeValues, htmlAttributes -> le null en fait est nécessaire-->
                        @Html.ActionLink(Estab.Name, "Details", "Establishment", new { id = item.Id}, null)
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Academy?');" })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Create new Academy", "Create")
</div>
