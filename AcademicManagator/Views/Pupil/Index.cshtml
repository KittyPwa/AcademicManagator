@model IEnumerable<PupilModel>

@{
    ViewBag.Title = "Index";
}

<div>
    <table>
        <tr>
            <th>@Html.LabelFor(model => model.First().Id)</th>
            <th>@Html.LabelFor(model => model.First().FirstName)</th>
            <th>@Html.LabelFor(model => model.First().LastName)</th>
            <th>@Html.LabelFor(model => model.First().Sex)</th>
            <th>@Html.LabelFor(model => model.First().BirthdayDate)</th>
            <th>@Html.LabelFor(model => model.First().State)</th>
            <th>@Html.LabelFor(model => model.First().Tutor_Id)</th>
            <th>@Html.LabelFor(model => model.First().Classroom_Id)</th>
            <th>@Html.LabelFor(model => model.First().Level_Id)</th>
            <th>@Html.LabelFor(model => model.First().Classrooms)</th>
            <th>@Html.LabelFor(model => model.First().Levels)</th>
            <th>@Html.LabelFor(model => model.First().Tutors)</th>
            <th>@Html.LabelFor(model => model.First().Results)</th>



        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthdayDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutor_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classroom_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Classrooms)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Levels)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tutors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Results)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Academy?');" })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Creer nouvel élève", "Create")
</div>
