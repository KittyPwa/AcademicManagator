@model IEnumerable<ClassroomModel>

@{
    ViewBag.Title = "Index";
}

<div>
    <table>
        <tr>
            <th>@Html.LabelFor(model => model.First().Id)</th>
            <th>@Html.LabelFor(model => model.First().Title)</th>
            <th>@Html.LabelFor(model => model.First().User_Id)</th>
            <th>@Html.LabelFor(model => model.First().Year_Id)</th>
            <th>@Html.LabelFor(model => model.First().Establishment_Id)</th>
            <th>@Html.LabelFor(model => model.First().Establishments)</th>
            <th>@Html.LabelFor(model => model.First().Users)</th>
            <th>@Html.LabelFor(model => model.First().Years)</th>
            <th>@Html.LabelFor(model => model.First().Evaluations)</th>
            <th>@Html.LabelFor(model => model.First().Pupils)</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Establishment_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Establishments)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Users)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Years)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evaluations)
                </td>
                @foreach (var Estab in item.Pupils)
                {
                    <td>
                        <!--linkText, actionName, controllerName, routeValues, htmlAttributes -> le null en fait est nécessaire-->
                     @Html.ActionLink(Estab.LastName, "Details", "Pupil", new { id = item.Id }, null)
                    </td>
                }
                <td>
                    @Html.ActionLink("Edit", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('Are you sure you wish to delete this Academy?');" })
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("Create new Classroom", "Create")
</div>
